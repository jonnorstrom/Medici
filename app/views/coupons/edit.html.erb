<%= form_for(@coupon) do |f| %>
  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :discount_percent %>
    <%= f.number_field :discount_percent, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :expires_at %>
    <%= f.date_field :expires_at %>
  </div>

  <div class="field">
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>

  <div class="actions">
    <%= f.submit "Update Coupon"%>
  </div>
<% end %>

<% if @coupon_errors %>
  <ul>
  <% @coupon_errors.each do |msg| %>
  <li><%=msg%></li>
  <% end %>
  </ul>
<% end %>
