<h2>&nbsp &nbsp<%= @tag.name %> </h2>
<div class="panel-body">
	<div class= "row masonry-container">
		<% @posts.shuffle.each do |post| %>
			<% if post.is_a?(Exhibit) %>
				<%= render "museums/exhibit_row", post: post, ticket: @ticket %>
			<% elsif post.is_a?(Event) %>
				<%= render "museums/event_row", post: post, ticket: @ticket %>
			<% elsif post.is_a?(Museum) %>
				<%= render "museums/museum_row", post: post, ticket: @ticket %>
			<% elsif post.is_a?(Piece) %>
				<%= render "museums/piece_row", post: post, ticket: @ticket %>
			<% end %>
		<% end %>
	</div>
</div>
