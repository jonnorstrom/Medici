<%= form_for (@piece), html: {multipart: true, class: "backend-form"} do |f| %>
  <% if @piece.errors.any? %>
    <% @piece.errors.each do |attribute, message| %>
      <p><%= attribute %>: <%= message %></p>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label "Priority?" %>
    <%= f.check_box :main %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :museum_id %>
    <%= f.collection_select :museum_id, Museum.order(:name), :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Add Piece"%>
  </div>
<% end %>

<%= link_to "Delete Piece", @piece, :method => :delete, :confirm => "You sure?" %>
