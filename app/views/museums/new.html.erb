<%= form_for (@museum), html: {multipart: true, class: "backend-form"} do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :opening_time %>
    <%= f.time_select :opening_time, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :closing_time %>
    <%= f.time_select :closing_time, {include_blank: true, ampm:true, minute_step: 30}%>
  </div>

  <p>
    If the museum has the same hours everyday, leave the daily fields blank. Otherwise, fill out the daily fields and leave the two above blank.
  </p>

  <div class="field">
    <%= f.label :sun_open %>
    <%= f.time_select :sun_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :sun_close %>
    <%= f.time_select :sun_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :mon_open %>
    <%= f.time_select :mon_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :mon_close %>
    <%= f.time_select :mon_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :tue_open %>
    <%= f.time_select :tue_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :tue_close %>
    <%= f.time_select :tue_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :wed_open %>
    <%= f.time_select :wed_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :wed_close %>
    <%= f.time_select :wed_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :thu_open %>
    <%= f.time_select :thu_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :thu_close %>
    <%= f.time_select :thu_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :fri_open %>
    <%= f.time_select :fri_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :fri_close %>
    <%= f.time_select :fri_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :sat_open %>
    <%= f.time_select :sat_open, {include_blank: true, ampm:true, minute_step: 30} %>
  </div>

  <div class="field">
    <%= f.label :sat_close %>
    <%= f.time_select :sat_close, {include_blank: true, ampm:true, minute_step: 30}  %>
  </div>

  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website%>
  </div>

  <div class="field">
    <%= f.label "External website for tickets (if applicable)" %>
    <%= f.text_field :ticketsite %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :transportation_info %>
    <%= f.text_area :transportation_info %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit "Add Museum"%>
  </div>
<% end %>

<% if @museum.errors.any? %>
  <% @museum.errors.each do |attribute, message| %>
    <%= attribute %>:
    <%= message %>
  <% end %>
<% end %>
